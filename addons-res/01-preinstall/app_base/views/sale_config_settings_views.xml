<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="app_res_config_settings_view_form_sale" model="ir.ui.view">
        <field name="name">app.res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='confirmation_email_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_sale_partner_only_customer"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_sale_partner_only_customer"/>
                        <div class="text-muted">
                            Show only customer in Sale
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
